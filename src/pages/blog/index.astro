---
const response = await fetch("https://message-aether.onrender.com/api/blog/");
const { data } = await response.json();
const blogs = data.blogs;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Posts</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <div class="container mx-auto p-4">
      <h1 class="text-4xl font-bold mb-6">Blog Posts</h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          blogs.map((blog) => (
            <div class="border rounded-lg p-4 shadow-lg">
              <img
                src={blog.image}
                alt={blog.title}
                class="w-full h-48 object-cover mb-4 rounded"
              />
              <h2 class="text-2xl font-semibold">{blog.title}</h2>
              <h3 class="text-xl text-gray-600 mb-2">{blog.subtitle}</h3>
              <p class="text-gray-800 mb-4">{blog.description}</p>
              <a
                href={`/blog/${blog.bId}`}
                class="text-blue-500 hover:underline"
              >
                Read more
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </body>
</html>
